{
  "manifest_version": 3,
  "name": "Sift",
  "version": "2.0",
  "description": "Instantly finds the perfect folder for every bookmark",
  "permissions": [
    "bookmarks",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
  }
}